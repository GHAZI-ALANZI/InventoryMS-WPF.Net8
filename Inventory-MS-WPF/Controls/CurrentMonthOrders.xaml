<UserControl x:Class="Inventory_MS_WPF.Controls.CurrentMonthOrders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inventory_MS_WPF.Controls"
                         mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1720">
    <Grid Margin="20 20 20 20">

        <Label FontFamily="Sogoe UI" FontWeight="Bold" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="ORDERS" FontSize="22" Foreground="#FF7B37FF"/>
                    <TextBlock Text="FOR THIS MONTH" HorizontalAlignment="Center" Foreground="#DDFBFF02"/>
                </StackPanel>
                <TextBlock Text="{Binding CurrentMonthOrders}" Style="{StaticResource MaterialDesignTextBlock}" Margin="20 0 0 0" FontSize="24" VerticalAlignment="Center" Foreground="#DDFBFF02"/>
            </StackPanel>
        </Label>

    </Grid>
</UserControl>
