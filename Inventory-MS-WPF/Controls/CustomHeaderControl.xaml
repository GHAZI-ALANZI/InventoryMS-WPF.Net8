<UserControl x:Class="Inventory_MS_WPF.Controls.CustomHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inventory_MS_WPF.Controls"
             mc:Ignorable="d" 
             >
    <!--Background="#2d89ef"-->
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="UserName" Margin="10" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center"/>
            <Button Content="Logout" Margin="10" FontSize="14"  Style="{StaticResource MaterialDesignOutlinedButton}"></Button>
        </StackPanel>
    </Grid>
</UserControl>
